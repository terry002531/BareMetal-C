{
    // --- 1. Distraction-Free UI (Applied to Student & Instructor) ---
    "extensions.ignoreRecommendations": true,
    "workbench.tips.enabled": false,
    "workbench.startupEditor": "none",

    // --- 2. Build Configuration ---
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    "[bat]": { "files.eol": "\r\n" },
    "[powershell]": { "files.eol": "\r\n" },

    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4,
        "editor.renderWhitespace": "all"
    },

    // --- 3. Global Hygiene (Hide junk for everyone) ---
    "files.exclude": {
        // Hiding Configs
        ".gitattributes": true,
        ".gitignore": true,
        ".vscode": true,
        "_vscode-extensions": true,
        "student.code-workspace": true,
        
        // Hiding Complexity
        "**/makefile": true,
        "**/Makefile": true,
        "**/*.bat": true,
        "**/*.command": true,
        "**/*.sh": true,
        "**/*.ps1": true,
        "**/LICENSE": true,
        "**/*.md": true,
        "docs-*": true,
        "setup": true,
        "sim": true,
        "**/*.s": true,
        
        // Hiding Test/Teacher Files
        "code/.test": true,
        "code/.obsolete*": true,
        "code/.c-experiments": true,
        "code/_defaults": true,
        "code/_headers": true,
        "code/default-*.*": true,
        "code/_instructor/_problem_matcher_tests": true,

        // copied header files
        ".vscode/sdcc-include": true,

        // Build Artifacts
        "**/*.asm": true,
        "**/*.ld": true,
        "**/*.lk": true,
        "**/*.lst": true,
        "**/*.map": true,
        "**/*.noi": true,
        "**/*.rel": true,
        "**/*.rst": true,
        "**/*.sym": true,
        "**/*.ihx": true,
        "code/**/*.bin": true,

        // Internals
        ".git": true,

        // OS Junk
        "**/.DS_Store": true,
        "**/.AppleDouble": true,
        "**/.LSOverride": true,
        "**/Thumbs.db": true,
        "**/ehthumbs.db": true,
        "**/Desktop.ini": true,

        // dummy file to let above section end with comma
        "IfYourFileNameIsThisYouDeserveIt_-_-_-": true
    }
}
