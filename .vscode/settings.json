{
    // temporarily suppress intellisense red squiggles
    // "C_Cpp.errorSquiggles": "disabled",

    // Config Line Endings
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    // Language-specific overrides (Windows Scripts must be CRLF)
    "[bat]": {
        "files.eol": "\r\n"
    },
    "[powershell]": {
        "files.eol": "\r\n"
    },

    // makefile needs distinction between spaces and tabs
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4,
        "editor.renderWhitespace": "all"
    },

    // 2. File Visibility (Student View: Focused)
    "files.exclude": {
        // Build Artifacts
        "**/*.asm": true,
        "**/*.ld": true,
        "**/*.lk": true,
        "**/*.lst": true,
        "**/*.map": true,
        "**/*.noi": true,
        "**/*.rel": true,
        "**/*.rst": true,
        "**/*.sym": true,
        "**/*.ihx": true,
        "code/**/*.bin": true,
        "code/.test": true,

        // test files
        "code/_instructor/_problem_matcher_tests": true,

        // System/Config Files (Hide from students)
        ".gitattributes": true,
        ".gitignore": true,
        ".vscode": true,
        "_vscode-extensions": true,

        // Hide git internals
        ".git": true,

        // --- macOS Crap ---
        "**/.DS_Store": true,      // Finder view settings
        "**/.AppleDouble": true,   // Resource forks
        "**/.LSOverride": true,    // Launch Services

        // --- Windows Crap ---
        "**/Thumbs.db": true,      // Explorer thumbnails
        "**/ehthumbs.db": true,    // Media center thumbnails
        "**/Desktop.ini": true,    // Folder customization
        
        // Scripts
        "**/*.bat": true,
        "**/*.command": true,
        "**/*.sh": true,
        "**/*.ps1": true,

        // Makefiles
        "**/makefile": true,
        "**/Makefile": true,

        // License and markdowns
        "**/LICENSE": true,
        "**/*.md": true,

        // Hidden Source Folders
        "code/.obsolete*": true,
        "code/.c-experiments": true,
        "code/_defaults": true,
        "code/_headers": true,
        "code/default-*.*": true,

        // Hidden Document Folders
        "docs-*": true,
        "setup": true,
        
        // Sim Logic
        "sim": true,

        // Source filters
        "**/*.s": true
    },
    "search.exclude": {
        "**/*.md": true
    }
}
