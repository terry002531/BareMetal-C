{
    "configurations": [
        {
            "name": "SDCC Z80",
            "includePath": [
                "${workspaceFolder}/code/_headers",
                "${workspaceFolder}/code/_headers_student",
                "${workspaceFolder}/.vscode/sdcc-include"
            ],
            "defines": [

                // No '=' sets flag to 1 (True) for enabling #ifdef feature blocks.
                "__SDCC",
                "__SDCC_z80",

                // With '=' defines as empty string, hiding non-standard keywords from IntelliSense.
                "__naked=", 
                "__critical=",
                "__interrupt=",
                "__at(x)=",
                "__asm__(x)="

            ],
            "compilerPath": "",
            "cStandard": "c99",
            "intelliSenseMode": "clang-x86",
            "browse": {
                "limitSymbolsToIncludedHeaders": true,
                "path": [
                    "${workspaceFolder}/code/_headers",
                    "${workspaceFolder}/code/_headers_student",
                    "${workspaceFolder}/.vscode/sdcc-include"
                ]
            }
        }
    ],
    "version": 4
}
